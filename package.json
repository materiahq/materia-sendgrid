{
  "name": "@materia/sendgrid",
  "version": "1.0.0",
  "description": "Sendgrid addon for Materia",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webshell/materia-sendgrid.git"
  },
  "main": "bundle.js",
  "author": "thyb@oauth.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/webshell/materia-sendgrid/issues"
  },
  "homepage": "https://github.com/webshell/materia-sendgrid#readme",
  "scripts": {
    "build": "rimraf dist && rollup -c && npm run build:server && ncp server/ dist/server && rimraf dist/server/index.ts && ncp package.json dist/package.json",
    "build:core": "ng-packagr",
    "build:server": "tsc -p ./tsconfig.server.json",
    "lint": "npm run lint:ts && npm run lint:sass",
    "lint:ts": "ng lint --type-check=true",
    "lint:sass": "sass-lint --verbose --no-exit --config ./.sass-lint.yml",
    "postinstall": "npm rebuild node-sass"
  },
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/cdk": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/material": "^6.0.3",
    "node-mailjet": "^3.0.6"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-angular-inline": "^1.0.1",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-typescript": "^0.8.1",
    "rollup-plugin-typescript2": "^0.10.0",
    "typescript": "^2.6.2"
  },
  "materia": {
    "addon": "SendgridAddon"
  }
}
